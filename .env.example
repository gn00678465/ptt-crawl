# PTT Stock 爬蟲環境變數範例
# 複製此檔案為 .env 並修改相關設定

# 資料庫設定
DATABASE_URL=

# Redis 設定
REDIS_URL=redis://localhost:6379

# Firecrawl API 設定
FIRECRAWL_API_URL=http://localhost:3002
FIRECRAWL_API_KEY=

# 爬取設定
CRAWL_RATE_LIMIT=60
CRAWL_REQUEST_DELAY=1.5
CRAWL_MAX_RETRIES=3
CRAWL_TIMEOUT=30
CRAWL_CONCURRENT_LIMIT=3
CRAWL_BATCH_SIZE=10

# 資料庫連線設定
DATABASE_CONNECTION_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30
DATABASE_QUERY_TIMEOUT=60

# Redis 連線設定
REDIS_CONNECTION_TIMEOUT=5
REDIS_KEY_PREFIX=ptt:crawl:

# 狀態管理設定
STATE_BACKUP_INTERVAL=300
STATE_CLEANUP_DAYS=30

# 日誌設定
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/ptt-crawler.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
